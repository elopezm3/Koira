Businesses
<% if @businesses %>
  <% @businesses.each do |business| %>
    <%= link_to business.name, business_path(business) %>
    <% business.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% end %>
<% end %>
Products or Services
<% if @product_or_services %>
  <% @product_or_services.each do |product_service| %>
    <%= link_to product_service.name, business_path(product_service.business) %>
    <% product_service.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% end %>
<% end %>
Categories
<% if @categories %>
  <% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
    <%= cl_image_tag category.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
<% end %>
