<div class="card mb-7" style="max-width: 800px; margin: auto; padding: 16px; text-align: center">
    <div class="row no-gutters">
        <div class="col-md-4" style="max-width: 1600px; margin: auto; padding: 1px;">
          <%= image_tag "sign.png", class:"card-img" %>
        </div>
        <div class="container">
          <strong><h2>Registro</h2></strong>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "First Name" },
                          placeholder: "Camilo" %>
              <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Last Name" },
                          placeholder: "Sepulveda" %>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "camilo.sepulveda@gmail.com" %>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          placeholder: "*******************" %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password",
                          placeholder: "*******************" } %>
              <%= f.hidden_field :role, value: "customer"%>
            </div>

            <div class="form-actions"><button type="button" class="btn btn-primary">
              <%= f.button :submit, "Sign up" %></button>
            </div>
          <% end %>
          <br>
          <button type="button" class="btn btn-success">
          <%= render "devise/shared/links" %></button>
        </div>
    </div>
</div>
