<div class=" form_cocktail container m-3">
  <%= simple_form_for @business do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.label :type_of_business, "type_of_business:"   %>
    <%= f.collection_radio_buttons :type_of_business, [["pub", 'Bar'], ["restaurant", 'Restaurante']], :first, :last%>
    <%= f.input :photo, as: :file, required: true %>
    <%= f.button :submit, required: true, class:"btn btn-primary" %>
  <% end %>
</div>
