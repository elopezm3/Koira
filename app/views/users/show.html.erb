<div class="grid">
  <p>Hola, <%= @user.first_name + " " + @user.last_name %></p>
  <h1>Mi cuenta</h1>
  <h2>My businesses</h2>
  <% unless @businesses.nil? %>
    <% @businesses.each do |business| %>
      <div class="business_index-card">
        <div>
          <%= link_to "#{business.name}", business_path(business) %>

        </div>
        <div><%= business.address %></div>
        <div><%= business.description %></div>
        <div><%= link_to "See reservations", my_business_path(business) %></div>
        <% business.photos.each do |photo| %>
          <div id="" class="swiper-slide">
            <%= cl_image_tag photo.key, class:"img-fluid", height: 600, width: 1920, crop: :fill %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <h2>My purchases</h2>
  <% unless @purchases.nil? %>
    <% @purchases.each do |purchase| %>
      <div>Business: <%= purchase.business.name %></div>
      <div><%= purchase.date%></div>
      <div><%= purchase.time.strftime("%I:%M%p") %></div>
      <div><%= purchase.total_price%></div>
      <div><%= link_to "See more details", purchase_path(purchase) %></div>
    <% end %>
  <% end %>
</div>
